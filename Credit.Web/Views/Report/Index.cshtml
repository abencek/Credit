@model IEnumerable<ReportIndexViewModel>

<div class="report-sort bg-light text-secondary my-2">
    <i class="fas fa-sort-alpha-down mx-2"></i>A
</div>
<div class="d-flex flex-wrap">
    @foreach(var item in Model.Where(x=>x.ReportGroup=='A')){
        @await Html.PartialAsync("_ReportCardPartial",item);
    }
</div>
<div class="report-sort bg-light text-secondary my-2">
    <i class="fas fa-sort-alpha-down mx-2"></i>C
</div>
<div class="d-flex">
    @foreach(var item in Model.Where(x=>x.ReportGroup=='C')){
        @await Html.PartialAsync("_ReportCardPartial",item);
    }
</div>

@section StyleSheetSection {
    <link rel="stylesheet" asp-href-include="css/report.css" asp-append-version="true">
}



