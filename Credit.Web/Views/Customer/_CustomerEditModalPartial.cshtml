@model CustomerViewModel
@{
  Layout=null;
}

<div class="modal fade" id="modal-window" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-light">
              <h5 class="modal-title text-secondary" id="modal-title">
                Customer ID:
                <span class="ml-2">@Model.CustomerId</span>
              </h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body mt-sm-2">
              <form action="#" class="mx-50"> 
                <input type="hidden" asp-for="@Model.CustomerId">
                <div class="form-group row mb-4">
                  <label asp-for="@Model.FirstName" class="col-sm-4 col-form-label"></label>
                  <div class="col-sm">
                    <input type="text" class="form-control" asp-for="@Model.FirstName">
                  </div>
                </div> 
                <div class="form-group row mb-4">
                  <label asp-for="@Model.LastName" class="col-sm-4 col-form-label"></label>
                  <div class="col-sm">
                    <input type="text" class="form-control" asp-for="@Model.LastName">
                  </div>
                </div> 
                <div class="form-group row mb-4">
                  <label asp-for="@Model.PersonalId" class="col-sm-4 col-form-label"></label>
                  <div class="col-sm">
                      <input type="text" class="form-control" asp-for="@Model.PersonalId">
                  </div>
                </div> 
                <div class="form-group row mb-4">
                  <label asp-for="@Model.BirthDate" class="col-sm-4 col-form-label"></label>
                  <div class="col-sm">
                      <input type="text" class="form-control" asp-for="@Model.BirthDate">
                  </div>
                </div>
                <div class="form-group row">
                  <label asp-for="@Model.CustomerStatusId" class="col-sm-4 col-form-label"></label>
                  <div class="col-sm">
                  <select class="form-control" asp-for="@Model.CustomerStatusId" asp-items="@ViewBag.CustomerStatusSelectList">
                  </select>
                  </div> 
                </div>
              </form>
            </div>
            <div class="modal-footer border-0 my-2 pt-0">
              <a href="#" class="btn btn-secondary" data-dismiss="modal">Close</a>
              <a href="#" class="btn btn-primary" id="modal-button-submit">Save</a>
            </div>
        </div>
    </div>
</div>
